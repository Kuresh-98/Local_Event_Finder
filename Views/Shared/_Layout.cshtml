<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Local Event Finder</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Local_Event_Finder.styles.css" asp-append-version="true" />
</head>
<body class="app-body">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-gradient-primary shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-controller="Events" asp-action="Index">LocalEventFinder</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-controller="Events" asp-action="Index">Events</a></li>
                        @if (User.Identity?.IsAuthenticated == true && !User.IsInRole("Admin"))
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="MyEvents">My Events</a></li>
                        }
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="flash-container position-fixed top-0 start-50 translate-middle-x p-3" style="z-index:1080;">
        @await Html.PartialAsync("_Flash")
    </div>
    <div class="container py-4">
        <main role="main" class="pb-3 fade-in">
            @RenderBody()
        </main>
    </div>
    <footer class="footer-custom mt-auto py-3">
        <div class="container small text-center text-muted">
            &copy; @DateTime.Now.Year - Local Event Finder
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
