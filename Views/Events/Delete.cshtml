@model Local_Event_Finder.Models.Event
@{
    ViewData["Title"] = "Delete Event";
}
<h1>Delete Event</h1>
<h4>Are you sure you want to delete this event?</h4>
<div class="mb-3 p-3 border rounded">
    <p><strong>@Model.Title</strong></p>
    <p>@Model.StartUtc.ToLocalTime(): @Model.Venue, @Model.City</p>
    <p>@Model.Description</p>
</div>
<form asp-action="ConfirmDelete" method="post" asp-route-id="@Model.Id">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
</form>
