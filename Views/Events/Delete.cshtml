@model Local_Event_Finder.Models.Event
@{ ViewData["Title"] = "Delete Event"; }
<a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-secondary mb-3"><i class="bi bi-arrow-left"></i> Back</a>
<h1 class="mb-3 text-danger"><i class="bi bi-trash"></i> Delete Event</h1>
<div class="event-card" style="max-width:800px;">
    <div class="d-flex flex-wrap gap-2 mb-2">
        <span class="event-badge"><i class="bi bi-tag"></i> @Model.Category</span>
        <span class="event-badge"><i class="bi bi-geo"></i> @Model.City</span>
    </div>
    <h2 class="event-title" style="font-size:1.3rem;">@Model.Title</h2>
    <div class="event-time mb-2"><i class="bi bi-clock"></i> @Model.StartUtc.ToLocalTime().ToString("f")</div>
    <p class="small text-muted">@Model.Description</p>
    <div class="alert alert-danger small">This action cannot be undone.</div>
    <form asp-action="ConfirmDelete" method="post" asp-route-id="@Model.Id" class="d-flex gap-2">
        <button type="submit" class="btn btn-danger"><i class="bi bi-exclamation-octagon"></i> Delete</button>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
    </form>
</div>
