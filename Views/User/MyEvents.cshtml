@model List<Local_Event_Finder.Models.EventInterest>

@{
    ViewData["Title"] = "My Registered Events";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="bi bi-calendar-check"></i> My Registered Events</h2>
                <a asp-controller="Events" asp-action="Index" class="btn btn-outline-primary">
                    <i class="bi bi-calendar-event"></i> Browse All Events
                </a>
            </div>

            @if (Model.Any())
            {
                <div class="row">
                    @foreach (var interest in Model)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 event-card">
                                <div class="card-body">
                                    <div class="event-badges mb-2">
                                        <span class="event-badge"><i class="bi bi-tag"></i> @interest.Event.Category</span>
                                        <span class="event-badge">@interest.Event.City</span>
                                    </div>
                                    @if (interest.Event.IsCancelled)
                                    {
                                        <div class="alert alert-danger mb-2 py-2">
                                            <i class="bi bi-x-circle"></i> <strong>Event Cancelled</strong>
                                        </div>
                                    }
                                    <h5 class="card-title my-events-title">@interest.Event.Title</h5>
                                    <div class="event-time mb-2">
                                        <i class="bi bi-clock"></i> @interest.Event.StartUtc.ToString("ddd, dd MMM yyyy HH:mm")
                                    </div>
                                    <div class="event-meta mb-2">
                                        <span><i class="bi bi-geo-alt"></i> @interest.Event.Venue</span>
                                        <span><i class="bi bi-person"></i> @interest.Event.Organizer</span>
                                    </div>
                                    @if (interest.Event.TotalSeats.HasValue)
                                    {
                                        <div class="event-seats mb-2">
                                            <span><i class="bi bi-people"></i> 
                                                @interest.Event.AvailableSeats of @interest.Event.TotalSeats seats available
                                            </span>
                                        </div>
                                    }
                                    <p class="card-text small text-muted">
                                        @interest.Event.Description.Substring(0, Math.Min(100, interest.Event.Description.Length))@(interest.Event.Description.Length > 100 ? "..." : "")
                                    </p>
                                    <div class="registration-info">
                                        <small class="text-success my-events-registration">
                                            <i class="bi bi-check-circle"></i> Registered on @interest.InterestedAt.ToString("MMM dd, yyyy")
                                        </small>
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <div class="d-flex justify-content-between">
                                        <a asp-controller="Events" asp-action="Details" asp-route-id="@interest.Event.Id" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-info-circle"></i> View Details
                                        </a>
                                        <button class="btn btn-sm btn-outline-danger" 
                                                onclick="cancelRegistration(@interest.Event.Id)">
                                            <i class="bi bi-x-circle"></i> Cancel
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-calendar-x display-1 text-muted"></i>
                    <h3 class="mt-3">No Registered Events</h3>
                    <p class="text-muted">You haven't registered for any events yet.</p>
                    <a asp-controller="Events" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-calendar-event"></i> Browse Events
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
<script>
function cancelRegistration(eventId) {
    if (confirm('Are you sure you want to cancel your registration for this event?')) {
        fetch(`/Events/ToggleInterest/${eventId}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload(); // Refresh the page to update the list
            } else {
                alert(data.message || 'Error cancelling registration');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Error cancelling registration');
        });
    }
}
</script>
}
