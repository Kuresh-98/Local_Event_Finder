@{
    ViewData["Title"] = "Local Event Finder";
}
<section class="hero-section text-center mb-5">
    <div class="hero-inner mx-auto">
        <h1 class="hero-title">Discover Local Events Faster</h1>
        <p class="hero-tagline">Find meetups, music nights, workshops and community gatherings happening around you. Filter by city, category, date range – and never miss out again.</p>
        <div class="d-flex justify-content-center gap-3 flex-wrap mt-3">
            <a asp-controller="Events" asp-action="Index" class="btn btn-accent btn-lg px-4"><i class="bi bi-search"></i> Browse Events</a>
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-secondary btn-lg px-4"><i class="bi bi-person-plus"></i> Join Now</a>
        </div>
        <div class="small text-muted mt-3">All times shown in UTC unless noted.</div>
    </div>
</section>
<section class="features-grid row g-4 mb-5">
    <div class="col-md-4">
        <div class="feature-box h-100">
            <div class="icon-wrap gradient-indigo"><i class="bi bi-funnel"></i></div>
            <h3>Smart Filtering</h3>
            <p>Narrow events instantly by text, city, category and flexible date range.</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="feature-box h-100">
            <div class="icon-wrap gradient-amber"><i class="bi bi-calendar-event"></i></div>
            <h3>Clear Scheduling</h3>
            <p>Consistent UTC timestamps keep remote collaboration simple.</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="feature-box h-100">
            <div class="icon-wrap gradient-green"><i class="bi bi-lightning-charge"></i></div>
            <h3>Fast & Lightweight</h3>
            <p>Optimized queries and minimal UI deliver quick results on any device.</p>
        </div>
    </div>
</section>
<section class="cta-panel text-center mb-5">
    <h2 class="mb-3">Host Events as an Admin</h2>
    <p class="mb-4">Become an administrator to create, edit and curate events for your community. Seed admin user already available for local development.</p>
    <a asp-controller="Events" asp-action="Create" class="btn btn-primary btn-lg"><i class="bi bi-plus-circle"></i> Create an Event</a>
</section>
@section Scripts { }
